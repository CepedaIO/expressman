{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "rootDirs": [
      "./src",
      "./../src"
    ],
    "outDir": "./dist",
    "lib": ["esnext"]
  },
  "files": [
    "../src/types.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
